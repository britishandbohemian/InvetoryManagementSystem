<!DOCTYPE html>
<html lang="en">
<!-- This Is the deafult head component Shared Across Multiple pages -->
<%- include('DefaultHead') %>
  <title>
    Login
  </title>

  <body>

    <!-- Default Navbar Element -->
    <%- include('NavbarDefault') %>

      <!-- Main Content -->
      <div class="LoginPage" style="padding-left: 5rem;width: 100vw;">


        <div class="col-md-6" style="border-radius: 0px;display: flex;justify-content: center;">

          <div class="card mt-5" style="border-radius: 0px; border: none;width: 60%;">

            <!-- Top Label -->
            <div class="card-header" style="
                              background-color: #FF0000;">
              <h3 style="    font-size: 1.75rem;
                font-weight: bold;
                color: white;
                font-size: 21px;
                font-weight: bold;">Login</h3>
            </div>


            <!-- Card body -->
            <div class="card-body" style="border: none;">
              <form id="login-form" action="/api/auth/Login" method="POST">
                <div class="form-group py-2">
                  <label for="email">Username</label>
                  <input type="text" name="username" class="form-control" id="username" style="border-radius: 0;"
                    required>
                </div>
                <div class="form-group">
                  <label for="password">Password</label>
                  <input type="password" class="form-control" id="userPassword" name="userPassword"
                    style="border-radius: 0;" required>
                </div>
                <!-- Call the loginUser function on form submit -->
                <button type="submit" class="btn mt-2"
                  style="border-radius: 0; background-color: #FF0000; color: white;">Login</button>
              </form>
              <div style="padding: 1rem 0rem; display: flex;">
                <h3 style="font-size: 1rem;font-weight: bold;">
                  <%= message %>
                </h3>
              </div>
              <div class="mt-3">
                <p style="color:#FF0000;font-weight: bold;">Don't have an account? <a style="font-weight: 300;"
                    href="/register">Register</a></p>
              </div>
            </div>


          </div>

        </div>


      </div>


  </body>

</html>