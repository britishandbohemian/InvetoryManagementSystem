    </div>

    <script>




      const supplierForm = document.getElementById('supplierForm');
      const updateButton = document.getElementById('updateButton');
      const supplierIdSelect = document.getElementById('supplierId');

      updateButton.addEventListener('click', function () {
        const selectedSupplierId = supplierIdSelect.value;
        supplierForm.action = `/api/suppliers/${selectedSupplierId}`;
        supplierForm.method = 'PUT';
        supplierForm.submit();
      });

      // Adjust form's action before submitting
      document.getElementById('productForm').addEventListener('submit', function () {
        var productId = document.getElementById('productId').value;
        this.action = "/api/Products/" + productId + "?_method=PUT";
      });

    </script>
