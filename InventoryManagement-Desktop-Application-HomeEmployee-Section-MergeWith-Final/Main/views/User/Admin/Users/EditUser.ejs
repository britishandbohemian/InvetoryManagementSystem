<!DOCTYPE html>
<html>

<head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <link rel="stylesheet" href="/css/style.css">
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
      <!-- Bootstrap CSS -->
      <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
      <link rel="stylesheet"
            href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
      <!-- Font Awesome -->
      <link rel="stylesheet" href="/fontawesome/css/all.min.css">


</head>

<body>

      <%- include('../views/NavBarAdmin') %>



            <div class="main-content">
                  <div style="display:flex; margin-bottom: 2rem;">

                        <a href="/users" style="    margin: 2px 20px;
          color: #000000;
          text-decoration: none;" class="back-link" id="back-arrow"><i class="fas fa-arrow-left"></i></a>

                  </div>
                  <div style="display: grid;grid-template-columns: 1fr 70%;">
                        <div
                              style="display: flex;flex-direction: column; gap: 1rem;align-items: center;justify-content: center;padding-top: 3rem;">
                              <h1 class=""
                                    style="padding-left: 14px; font-size: 22px; font-weight: bolder; letter-spacing: 0px;">
                                    View Users
                              </h1>
                              <span class="material-symbols-outlined account-circle"
                                    style="font-size: 6rem;width: auto;height: 500px;width: 500px;display: flex;justify-content: center;align-items: center;">account_circle</span>
                        </div>
                        <form style="width: 70%;padding: 5rem;" class="shadow" method="POST" action="
                              /updateUser/<%=data.userId%>">
                              <div class="form-group">
                                    <label for="username">Username</label>
                                    <input type="text" name="username" class="form-control" id="Username"
                                          style="border-radius: 0;" value="<%=data.username%>" required>
                              </div>
                              <div class="form-group">
                                    <label for="password">Password:</label>
                                    <input type="password" class="form-control" id="firstpassword" name="userPassword"
                                          style="border-radius: 0;" value="<%=data.userPassword%>" required>
                              </div>



                              <div class="form-group">
                                    <label for="userEmail">Email address:</label>
                                    <input type="email" name="userEmail" class="form-control" id="userEmail"
                                          style="border-radius: 0;" value="<%=data.userEmail%>" required>
                              </div>

                              <div class="form-group">
                                    <label for="userContact">Contact Number</label>
                                    <input type="tel" name="userContact" class="form-control" id="userContact"
                                          style="border-radius: 0;" value="<%=data.userContact%>" required>
                              </div>

                              <div class="form-group">
                                    <label for="role">Role:</label>
                                    <select id="role" name="role" class="form-control" required>
                                          <option value="user">User</option>
                                          <option value="admin">Admin</option>
                                    </select>
                              </div>
                              <input type="submit" class="btn"></input>
                              <button type="button" class="btn" onclick="window.history.back();
                              ">Discard</button>
                        </form>
                  </div>

            </div>



</body>

</html>